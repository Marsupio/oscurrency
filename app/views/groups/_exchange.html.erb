<li>
  <div class="profile-image">
    <%= image_link exchange.worker, :image => :thumbnail %>
    <%= image_tag "icons/switch.gif", :class => "icon", :alt => "Street Cred" %>
  </div>
  <p>
  <% if exchange.group.nil? %>
    <%= person_link exchange.worker %> <%= t('earned') + " " + exchange.amount.to_s + " " + t('currency_unit_plural') + " " + t('for') %> <%= link_to h(exchange.metadata.name), exchange.metadata %>
  <% else %>
    <%= person_link exchange.worker %> <%= t('earned') + " " + exchange.amount.to_s + " " + exchange.group.unit + " " + t('for') %> <%= link_to h(exchange.metadata.name), exchange.metadata %>
  <%- end -%>
  </p>
  <p class="meta published">
    <%= time_ago_in_words(exchange.created_at).capitalize %> <%= t('ago') %>
  </p>

</li>
