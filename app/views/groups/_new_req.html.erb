      <h2>New Req</h2>
      <% form_for :req, :url => create_req_group_path(@group), :html => {:id => 'new_req'} do |f| %>
        <%= f.hidden_field :group_id, :value => @group.id %>
        <div class="form_row">
          <%= f.label 'Title' %>
          <%= f.text_field :name, :size => 40, :maxlength => 255 %>
        </div>
        <div class="form_row">
          <%= f.label :estimated_pay %>
          <%= f.text_field :estimated_hours, :size => 5 %>&nbsp;<span class='small'><%= @group.unit %></span>
        </div>
        <div class="form_row">
          <%= f.label :due_date %>
          <%= f.text_field :due_date, :size => 7 %>
        </div>
        <div class="form_row full">
          <%= f.label :description %>
          <p class='formatting'>Be sure to include your preferred means of communication, i.e. email, text, or telephone.</p>
          <%= f.text_area :description, :rows => 5 %>
        </div>
        <div class="form_row full">
          <%= render :partial => "shared/select_categories", :locals => { :model_name => 'req' } %>
        </div>
        <div class="form_row">
          <%= f.submit "Submit" %><%= waiting_image %>
        </div>
      <% end %>
