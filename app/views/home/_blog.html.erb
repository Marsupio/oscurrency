<%- unless global_prefs.app_name.blank? -%>
  <h2><%= global_prefs.app_name %> <%= t('home._blog.header') %></h2>
<%- else -%>
  <h2><%= t('home._blog.header').capitalize %></h2>
<%- end -%>
<%- if @posts.empty? -%>
  <h3 class="blankslate">
    No posts yet!
  </h3>
<%- else -%>
  <ul class="list blog full">
    <%= render :partial => 'posts/blog_post', :collection => @posts %>
  </ul>
<%- end -%>

<%= will_paginate(@posts) %>
