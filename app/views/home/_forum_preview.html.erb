<table>
  <tr><th><%= t('home._forum_preview.header') %></th></tr>
  <%- @topics.each do |topic| -%>
  <%- last_post = topic.posts.reverse.first -%>
  <tr class=<%= cycle("odd", "even") %>>
    <td>
      <%= topic_link topic %>
      <br />
      <span class="quiet small">
      <%= t('home._forum_preview.header') %>
      <%= time_ago_in_words(last_post.created_at) %> <%= t('ago') %>
      <%= t('by') %> <%= person_link last_post.person %>
      </span>
    </td>
  </tr>
  <%- end -%>
</table>

<div class="more">
<%= link_to "Go to discussion forum &raquo;", forum_path(topic.forum) %>
</div>
