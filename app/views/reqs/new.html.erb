<%= render :partial => 'shared/jscript', :locals => { :jscript_file_name => 'req_form' } %>
<%- column_div :type => :primary do -%>

  <h2><%= t('reqs.new.header') %></h2>

<%= error_messages_for :req %>

<% form_for(@req) do |f| %>
  <div class="form_row">
    <%= f.label t('title') %>
    <%= f.text_field :name %>
  </div>
  <div class="form_row">
    <%= f.label t('estimated') + ' ' + t('currency_unit_plural') %>
    <%= f.text_field :estimated_hours, :size => 5 %>
  </div>
  <div class="form_row">
    <%= f.label t('due_date') %>
    <%= f.text_field :due_date, :size => 7 %>
  </div>
  <div class="form_row">
    <%= f.label t('description') %>
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="form_row full">
    <%= render :partial => "shared/select_categories", :locals => { :model_name => 'req' } %>
  </div>
  <div id="providersDisplay" style="height: 95px;" class="form_row full"><label><%= t('reqs.new.people_to_be_notified') %>:</label><div id="followMe"></div></div>
  <div class="form_row">
    <label for="notifications" class="checkbox"><%= t('notify_members_email') %></label>
    <%= check_box_tag 'req[notifications]', '1', true %>
  </div>
<% unless global_prefs.twitter_name.blank? %>
    <div class="form_row">
      <label for=<%= t('twitter') %>
        class="checkbox"><%= t('notify_members_twitter') %> <a href="<%= t('twitter_url') %><%= global_prefs.twitter_name %>" target="top"><%= t('twitter') %></a>?</label>
      <%= check_box_tag 'req[twitter]', '1', true %>
    </div>
<% end %>
  <div class="form_row">
    <%= f.submit t('button_create') %>
  </div>
<% end %>

<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'searches/box' %>
  <%= render :partial => 'shared/minifeed' %>
<%- end -%>
