<%- column_div :type => :primary do -%>
  <h2><%= h @topic.name %></h2>
    <%= link_to t('topics.show.add_a_new_post'), forum_topic_path(@forum, @topic, :posts => @topic.posts.count, :anchor => 'forum_post'), :class => 'small' %>
  <%= will_paginate(@posts) %>
  <ul class="list topic full">
    <%= render :partial => 'forum_post', :collection => @posts %>
  </ul>
  <%= will_paginate(@posts) %>


  <h3><%= t('topics.show.add_a_new_post').capitalize %></h3>
  <a name="forum_post">
  <%= error_messages_for :post %>

  <% form_for :post,
              :url => forum_topic_posts_path(@forum, @topic)  do |f| %>
    <div class="form_row">
      <%= f.text_area :body, :rows => 10 %>
    </div>

    <div class="form_row">
      <%= f.submit t('button_submit'), :class => "button" %>
    </div>
  <% end %>

<%- end -%>

<%- column_div :type => :secondary do -%>
  <% if !@group %>
    <%= render :partial => 'shared/minifeed' %>
  <% else %>
    <%= render :partial => 'group' %>
    <%= render :partial => 'shared/group_membership', :locals => {:group => @group} %>
  <% end %>
<%- end -%>

<%= yui_headers('post_body') %>
